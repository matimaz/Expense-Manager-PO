@model IEnumerable<ExpenseManager.Models.ExpenseModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Wydatków</h1>

<p>
    <a asp-action="Create">Dodaj nowy wydatek</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
              
                @Enum.GetName(typeof(Categories),(item.Category))
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new {  id=item.ExpenseId  })
                @Html.ActionLink("Szczegóły", "Details", new {  id=item.ExpenseId  })
                @Html.ActionLink("Usuń", "Delete", new {  id=item.ExpenseId })
            </td>
        </tr>
}
    </tbody>
</table>
